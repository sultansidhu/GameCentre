<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fall2018.csc2017.GameCentre.StartingActivity">

    <TextView
        android:id="@+id/GameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="135dp"
        android:gravity="center"
        android:text="Welcome To Sliding Tiles \n A Puzzle Game where you must arrange the numbers in the correct order"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/StartButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/GameText"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="75dp"
        android:text="New Game"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/LoadButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/GameText"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="32dp"
        android:layout_toStartOf="@+id/StartButton"
        android:text="Load Saved Game"
        tools:ignore="HardcodedText" />

   <!-- <Button
        android:id="@+id/SaveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/GameText"
        android:layout_toEndOf="@+id/StartButton"
        android:text="Save Game" />-->

    <Spinner
        android:id="@+id/dropdown_size"
        android:layout_width="161dp"
        android:layout_height="46dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="206dp"
        android:layout_marginBottom="118dp" />

    <TextView
        android:id="@+id/txtDropdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/dropdown_size"
        android:layout_alignStart="@+id/dropdown_size"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="3dp"
        android:text="Select a Size: "
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/txtUndo"
        android:layout_width="145dp"
        android:layout_height="39dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="149dp"
        android:layout_toStartOf="@+id/txtDropdown"
        android:text="Enter Undo Limit"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btnScoreboard"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="118dp"
        android:layout_marginBottom="226dp"
        android:text="View Scoreboard"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="346dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="33dp"
        app:srcCompat="@drawable/tilesdisplay"
        android:contentDescription="slidingtiles"
        tools:ignore="HardcodedText" />

    <Spinner
        android:id="@+id/dropdown_undo"
        android:layout_width="161dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="493dp" />

</RelativeLayout>